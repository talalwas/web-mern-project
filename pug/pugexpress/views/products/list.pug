extends ../layout

block content
    .row    
        .col-sm-8
                 h1=title 

        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right") Add New Product
    table.table
                thead
                     tr  
                         th Name
                         th Price
                             tbody
                                 each product in products
                                        tr
                                            td=product.name
                                            td=product.price
                